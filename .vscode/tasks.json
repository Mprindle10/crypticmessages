{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Start FastAPI Backend",
      "command": "source .venv/bin/activate && uvicorn main:app --reload",
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Start React Frontend",
      "command": "cd frontend && npm start",
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Start All (Backend + Frontend)",
      "dependsOn": ["Start FastAPI Backend", "Start React Frontend"],
      "group": "build",
      "dependsOrder": "parallel"
    }
  ]
}
