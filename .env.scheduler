# Cryptic Messages Scheduler Configuration

# Database Configuration
DATABASE_URL=postgresql://m:Prindle#$%10@localhost/theriddleroom
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Delivery Schedule (24-hour format)
SUNDAY_DELIVERY_TIME=08:00
WEDNESDAY_DELIVERY_TIME=18:00  
FRIDAY_DELIVERY_TIME=15:00

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Configuration  
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@cipher-academy.com
SENDGRID_FROM_NAME=The Cipher Academy

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=scheduler.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Service Configuration
SCHEDULER_TIMEZONE=UTC
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=300
HEARTBEAT_INTERVAL_MINUTES=15

# Message Configuration
SMS_CHARACTER_LIMIT=1000
EMAIL_TEMPLATE_PATH=templates/
MESSAGE_CACHE_TTL_HOURS=24

# Monitoring Configuration
HEALTH_CHECK_PORT=8081
METRICS_ENDPOINT=/metrics
STATUS_ENDPOINT=/status

# Feature Flags
ENABLE_SMS_DELIVERY=true
ENABLE_EMAIL_DELIVERY=true
ENABLE_DELIVERY_ANALYTICS=true
ENABLE_USER_ELIGIBILITY_CHECK=true
ENABLE_PROGRESS_TRACKING=true

# Rate Limiting
SMS_RATE_LIMIT_PER_MINUTE=100
EMAIL_RATE_LIMIT_PER_MINUTE=500
API_RATE_LIMIT_PER_MINUTE=1000

# Development Settings
DEBUG_MODE=false
TEST_USER_ID=1
TEST_PHONE_NUMBER=+1234567890
TEST_EMAIL=test@example.com
